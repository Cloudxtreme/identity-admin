# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                              @controllers.Application.index

GET        /management/healthcheck        @controllers.HealthCheck.healthCheck

GET        /login                         @controllers.Login.login(loginError: Option[LoginError])

GET        /loginAction                   @controllers.Login.loginAction

GET        /oauth2callback                @controllers.Login.oauth2Callback

GET        /assets/*file                  @controllers.Assets.at(path="/public", file)

GET        /search                        @controllers.Search.search(searchQuery: String)

GET        /validateEmail                 @controllers.SendEmailValidation.validateEmail(searchQuery: String, userId: String)

GET        /sendEmailValidation           @controllers.SendEmailValidation.sendEmailValidation(searchQuery: String, userId: String)

GET        /edit                          @controllers.AccessUser.getUser(searchQuery: String, userId: String)

POST       /save                          @controllers.UpdateUser.save(searchQuery: String)

POST       /deleteUser                    @controllers.Delete.delete(searchQuery: String)